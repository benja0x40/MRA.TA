\name{plotOptimalSegments}
\alias{plotOptimalSegments}
%- Also NEED an '\alias' for EACH other topic documented here.
\title{
  %%  ~~function to do ... ~~
  Plot multi-resolution segmentation results
}
\description{
  %%  ~~ A concise (1-5 lines) description of what the function does. ~~
  Plot optimal segments resulting from the \code{segmentation} function.
}
\usage{
plotOptimalSegments(optimums, x.s, x.e, w2y, xlim = NULL, wlim = NULL, xlab = "", add = F, type = c("windows", "middles"), ...)
}
%- maybe also 'usage' for other objects documented here.
\arguments{
  \item{optimums}{
    %%     ~~Describe \code{optimums} here~~
    \code{data.frame} of segmentation results generated by the
    \code{segmentation} function.
  }
  \item{x.s}{
    %%     ~~Describe \code{x.s} here~~
    vector of start coordinates (x axis) defining the represented genomic intervals
  }
  \item{x.e}{
    %%     ~~Describe \code{x.e} here~~
    vector of end coordinates (x axis) defining the represented genomic intervals
  }
  \item{w2y}{
    %%     ~~Describe \code{w2y} here~~
    coordinate mapping for window sizes (y axis) produced by the
    \code{wSize2yAxis} function
  }
  \item{xlim}{
    %%     ~~Describe \code{xlim} here~~
    range of the represented genomic region = c(xmin, xmax)
  }
  \item{wlim}{
    %%     ~~Describe \code{wlim} here~~
    range of represented window sizes = c(wmin, wmax)
  }
  \item{xlab}{
    %%     ~~Describe \code{xlab} here~~
    legend of the x axis
  }
  \item{add}{
    %%     ~~Describe \code{add} here~~
    \code{logical}, if set to TRUE indicates to overlay the plot on an
    existing and consistent multi-resolution plot
  }
  \item{type}{
    %%     ~~Describe \code{type} here~~
    either "windows" (default) or "middles".
  }
  \item{\dots}{
    %%     ~~Describe \code{\dots} here~~
    optional parameters forwarded to the \code{rect} function.
  }
}
